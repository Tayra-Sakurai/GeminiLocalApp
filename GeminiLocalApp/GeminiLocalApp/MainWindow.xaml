<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="GeminiLocalApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GeminiLocalApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="GeminiLocalApp">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Background="White">
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="HGSeikaishotaiPRO"/>
                <Setter Property="FontSize" Value="16pt"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="FontSize" Value="16pt"/>
                <Setter Property="FontFamily" Value="HGSeikaishotaiPRO"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Uid="Label1"/>
        <TextBox x:Name="SuperPrompt"
                 Grid.Row="1" Grid.ColumnSpan="3"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <TextBlock x:Uid="Label2" Grid.Row="2"/>
        <WebView2 x:Name="SuperResponse" Source="https://gemini.google/about"
                  Grid.Row="3" Grid.ColumnSpan="3"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <AppBarButton x:Uid="Btn"
                      x:Name="SendBtn"
                      Grid.Row="4" Grid.Column="2"/>
    </Grid>
</Window>
